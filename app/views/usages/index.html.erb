<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Usages</h1>
</div>

<table class="container table table-striped shadow-lg">
  <thead>
    <tr>
      <th>User_id</th>
      <th>Units_consumed</th>
      <th>Total_Units</th>
      <th>Exceeded_Units</th>
      <th>Plan_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="plansTable w-30">
    <% @usages.each do |usage| %>
      <tr id="planRow_<%=usage.id %>">
        <td><%= usage.user_id %></td>
        <td><%= usage.unit_consumed %></td>
        <td><%= usage.total_units %></td>
        <td>
          <% if usage.unit_consumed > usage.total_units %>
            <%=usage.unit_consumed - usage.total_units%>
          <%end%>
        </td>
        <td><%= usage.feature.plan_id %></td>
        <td><%= link_to 'Show Feature', usage %></td>
        <td><%= link_to 'Edit', edit_usage_path(usage)  %></td>
    <% end %>
  </tbody>
</table>

<br>
