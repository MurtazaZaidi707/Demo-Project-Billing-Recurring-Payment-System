<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Subscribes</h1>
</div>

<table class="container table table-striped shadow-lg">
  <thead>
    <tr>
      <th>Buyer id</th>
      <th>Plan id</th>
      <th>Billing date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="subscribesTable w-30">
    <% @subscribes.each do |subscribe| %>
      <tr id="planRow_<%= subscribe.id %>">
        <td><%= subscribe.user_id %></td>
        <td><%= subscribe.plan_id %></td>
        <td><%= subscribe.billing_date %></td>
        <td><%= link_to 'Charge' %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>
