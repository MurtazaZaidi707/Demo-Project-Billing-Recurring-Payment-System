
<div class="container">
  <h1>Invoices</h1>
</div>

<table class="container table table-striped shadow-lg">
  <thead>
    <tr>
      <th>Plan Name</th>
      <th>Billing Date</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody id="invoicesTable w-30">
    <% @invoices.each do |invoice| %>
      <tr id="planRow_<%= invoice.id %>">
        <% subscribe = invoice.subscribe %>
        <td><%= subscribe.plan.name %></td>
        <td><%= invoice.billing_date  %></td>
        <td><%= invoice.status  %></td>
        <td><%= link_to 'Generate Invoice', invoice, class: "btn btn-outline-dark btn-sm" %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<br>
