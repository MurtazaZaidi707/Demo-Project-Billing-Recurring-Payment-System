<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table class="table w-28">
  <thead>
    <tr>
      <th>Name</th>
      <th>Monthly fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="plansTable w-30">
    <% @plans.each do |plan| %>
      <%= render 'shared/plan_row', plan: plan %>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user&.type == 'Admin' %>
  <%= link_to 'New plan', new_plan_path, id: "new_link"%>
<% end %>
