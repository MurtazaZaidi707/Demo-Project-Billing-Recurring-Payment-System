

<div class="container">
  <h1>Plans</h1>
</div>

<div class="container">
  <% if current_user&.type == 'Admin' %>
    <%= link_to 'New plan', new_plan_path, class:"btn btn-dark" , id: "new_link"%>
  <% end %>
</div>
<br>

<table class="container table table-striped shadow-lg">
  <thead>
    <tr>
      <th>Plan id</th>
      <th>Name</th>
      <th>Monthly fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="plansTable w-30 container">
    <% @plans.each do |plan| %>
      <%= render 'shared/plan_row', plan: plan %>
    <% end %>
  </tbody>
</table>
<div class="pagination justify-content-center">
  <%= paginate @plans %>
</div>

<br>
