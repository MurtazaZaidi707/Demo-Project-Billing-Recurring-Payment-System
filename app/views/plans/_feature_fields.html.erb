<div class="nested-fields">
    <%= f.hidden_field :_destroy %>
    <div>
      <%= f.label :name, { class: "form-label"} %><br>
      <%= f.text_field :name, { class: "form-control", placeholder: "name" } %>
    </div>
    <div>
      <%= f.label :code, { class: "form-label"} %><br>
      <%= f.text_area :code, { class: "form-control", placeholder: "code" } %>
    </div>
    <div>
      <%= f.label :unit_price, { class: "form-label"} %><br>
      <%= f.text_area :unit_price, { class: "form-control", placeholder: "unit_price" } %>
    </div>
    <div>
      <%= f.label :max_unit_limit, { class: "form-label"} %><br>
      <%= f.text_area :max_unit_limit, { class: "form-control", placeholder: "max_unit_limit" } %>
    </div>
    <br>
    <div>
        <%= link_to_remove_association "Remove Feature", f , class:"btn btn-outline-dark btn-sm"%>
    </div>
</div>
